# Development Dockerfile for Spring Boot application
FROM maven:3.9.6-eclipse-temurin-21 AS development

WORKDIR /app

# Copy Maven wrapper and pom.xml for dependency caching
COPY mvnw pom.xml ./
COPY .mvn .mvn

# Download dependencies (this layer will be cached if pom.xml doesn't change)
RUN ./mvnw dependency:go-offline -B

# Copy source code
COPY src ./src

# Expose ports
EXPOSE 8080 5005

# Default command for development with debug enabled
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005"]
